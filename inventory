    <div class="inventory-container">
        <h2>Blood Inventory Status</h2>
        <div class="inventory-grid" id="inventoryGrid">
            <!-- Blood groups will be populated by JavaScript -->
        </div>
    </div>
    <script>
        // Blood inventory data
let bloodInventory = {
    'A+': 10,
    'A-': 5,
    'B+': 15,
    'B-': 7,
    'AB+': 8,
    'AB-': 3,
    'O+': 20,
    'O-': 12
};

// Handle donor registration
if (document.getElementById('donorForm')) {
    document.getElementById('donorForm').addEventListener('submit', function(e) {
        e.preventDefault();
        alert('Donor registration successful!');
        this.reset();
    });
}

// Handle acceptor registration
if (document.getElementById('acceptorForm')) {
    document.getElementById('acceptorForm').addEventListener('submit', function(e) {
        e.preventDefault();
        alert('Blood request submitted successfully!');
        this.reset();
    });
}

// Display inventory
if (document.getElementById('inventoryGrid')) {
    const inventoryGrid = document.getElementById('inventoryGrid');
    
    for (let bloodGroup in bloodInventory) {
        const card = document.createElement('div');
        card.className = 'blood-group-card';
        card.innerHTML = `
            <h1>${bloodGroup}</h1>
            <p>${bloodInventory[bloodGroup]} units available</p>
        `;
        inventoryGrid.appendChild(card);
    }
}
    </script>
